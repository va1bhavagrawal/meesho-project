#!/bin/bash
#SBATCH --job-name=train
#SBATCH --output=job_output_%j.log  
#SBATCH --ntasks=1                  
#SBATCH --cpus-per-task=4           
#SBATCH --mem=100G 
#SBATCH --gres=gpu:1               
#SBATCH --partition=long 
#SBATCH -w cn7     


export RUN_NAME="sdxl512_1subject" 
# export RUN_NAME="debug" 

export MODEL_NAME="stabilityai/stable-diffusion-xl-base-1.0"

export INSTANCE_DIR_1SUBJECT="../training_data_2410/ref_imgs_1subject"  
export INSTANCE_DIR_2SUBJECTS="../training_data_2410/ref_imgs_2subjects" 
export CONTROLNET_DIR_1SUBJECT="../training_data_2410/controlnet_imgs_1subject"
export CONTROLNET_DIR_2SUBJECTS="../training_data_2410/controlnet_imgs_2subjects"

# export INSTANCE_DIR_1SUBJECT="../../../a-bev-of-the-latents/blender_dataset/rendered_images_1subject_fixedloc/"  
# export INSTANCE_DIR_2SUBJECTS="../training_data_2410/ref_imgs_2subjects" 
# export CONTROLNET_DIR_1SUBJECT="../../../a-bev-of-the-latents/controlnet_aug/rendered_images_1subject_fixedloc"
# export CONTROLNET_DIR_2SUBJECTS="../training_data_2410/controlnet_imgs_2subjects"

export OUTPUT_DIR="../ckpts/"
export CLASS_DATA_DIR="../training_data_2410/prior_imgs" 
export CONTROLNET_PROMPTS_FILE="../prompts/prompts_2410.txt" 


export VAE_PATH="madebyollin/sdxl-vae-fp16-fix"

accelerate launch --config_file accelerate_config.yaml train_sdxl.py \
  --pretrained_model_name_or_path=$MODEL_NAME  \
  --instance_data_dir=$INSTANCE_DIR \
  --pretrained_vae_model_name_or_path=$VAE_PATH \
  --output_dir=$OUTPUT_DIR \
  --resolution=512 \
  --train_batch_size=1 \
  --gradient_accumulation_steps=1 \
  --learning_rate=1e-4 \
  --learning_rate_special_encoder=1e-3 \
  --rendered_imgs_prompt="a photo of PLACEHOLDER in a dark studio with white lights" \
  --report_to="wandb" \
  --lr_warmup_steps=0 \
  --stage1_steps=100000 \
  --stage2_steps=100000 \
  --controlnet_prompts_file=$CONTROLNET_PROMPTS_FILE \
  --controlnet_data_dir_2subjects=$CONTROLNET_DIR_2SUBJECTS \
  --controlnet_data_dir_1subject=$CONTROLNET_DIR_1SUBJECT \
  --instance_data_dir_1subject=$INSTANCE_DIR_1SUBJECT \
  --instance_data_dir_2subjects=$INSTANCE_DIR_2SUBJECTS \
  --seed="1709" \
  --run_name=$RUN_NAME \
  --wandb
  # --resume_from_checkpoint="../ckpts/sdxl1024_1e-4_1e-3_CALL_singlesub_randomlocs/checkpoint-60000" \
  # --run_name="debug" \
  # --debug_dir="debug"